<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!--<style name="AppTheme" parent="Theme.AppCompat">-->
        <!--tool bar color-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--status bar color-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->

        <!--去掉原来的actionBar-->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!--API 22去掉actionBar-->
        <item name="windowNoTitle">true</item>

        <!--指定toolBar弹出菜单样式-->
        <item name="actionOverflowMenuStyle">@style/ToolBarMenuStyle</item>
    </style>

    <!--toolBar菜单样式-->
    <style name="ToolBarMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <!--是否覆盖toolBar-->
        <item name="overlapAnchor">true</item>
        <!--弹出层垂直方向偏移，负值会覆盖toolbar-->
        <!--<item name="android:dropDownVerticalOffset">-2dp</item>-->
        <!--弹出层垂直方向偏移，负值右边出现空隙-->
        <item name="android:dropDownHorizontalOffset">-2dp</item>
    </style>

</resources>
